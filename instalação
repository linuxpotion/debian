apt install debootstrap coreutils util-linux e2fsprogs
debootstrap --arch amd64 testing /mnt http://ftp.br.debian.org/debian/
debian-chroot /mnt
apt install --no-install-recommends --no-install-suggests linux-base locales sudo ntp nano

# Configurar arquivo interfaces.
nano /etc/network/interfaces
auto lo
iface lo inet loopback

# Configurar host.
nano /etc/hosts
127.0.1.1      debian

dpkg-reconfigure tzdata
dpkg-reconfigure locales
dpkg-reconfigure ntp

apt install --no-install-recommends --no-install-suggests grub rfkill networkmanager



